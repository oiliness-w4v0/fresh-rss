{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@libsql/client": "npm:@libsql/client@^0.15.15",
    "@mikaelporttila/rss": "jsr:@mikaelporttila/rss@^1.1.3",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@xtool/dayjs": "jsr:@xtool/dayjs@^0.1.4",
    "drizzle-kit": "npm:drizzle-kit@^0.31.7",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "fresh": "jsr:@fresh/core@^2.1.4",
    "nanoid": "npm:nanoid@^5.1.6",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.7",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
